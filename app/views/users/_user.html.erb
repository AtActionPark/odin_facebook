<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% return if current_user == user %>
  <% if current_user.invitees.include?(user) %>
    Waiting for response
  <% elsif !current_user.friend?(user)  %>
    <% @user = user %>
    <%= render 'invite' %>
  <% else %>
    Friend with you
  <% end %>
</li>